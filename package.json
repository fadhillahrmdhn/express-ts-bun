{
  "name": "express-ts-bun",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.3.4",
    "@types/express": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pretty-quick": "^4.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "express": "^5.2.1"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "lint": "bunx eslint src --ext .ts",
    "lint:fix": "bunx eslint src --ext .ts --fix",
    "prod": "NODE_ENV=production bun src/index.ts",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --cache --fix",
      "eslint --fix --max-warnings=0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}