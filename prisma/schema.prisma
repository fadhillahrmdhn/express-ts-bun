generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Barang {
  id         Int      @id @default(autoincrement())
  nama       String
  jumlah     Int
  harga      Decimal
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model User {
  user_id    String   @id @default(uuid())
  email      String   @unique
  nama       String   @default("")
  password   String
  role       String   @default("regular")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
